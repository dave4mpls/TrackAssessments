@page
@model TrackAssessments.Pages.AcquiredItems.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Acquired Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AcquiredItem.ID" />
            <div style="display: none;" class="form-group">
                <label asp-for="AcquiredItem.AssessmentID" class="control-label"></label>
                <input asp-for="AcquiredItem.AssessmentID" class="form-control" />
                <span asp-validation-for="AcquiredItem.AssessmentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AcquiredItem.Acquired" class="control-label"></label>
                <input asp-for="AcquiredItem.Acquired" class="form-control" />
                <span asp-validation-for="AcquiredItem.Acquired" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AcquiredItem.ItemName" class="control-label"></label>
                <input asp-for="AcquiredItem.ItemName" class="form-control" />
                <span asp-validation-for="AcquiredItem.ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AcquiredItem.ItemTypeID" class="control-label"></label>
                <select asp-for="AcquiredItem.ItemTypeID" class="form-control" asp-items="ViewBag.ItemTypeID"></select>
                <span asp-validation-for="AcquiredItem.ItemTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AcquiredItem.Description" class="control-label"></label>
                <textarea asp-for="AcquiredItem.Description" class="form-control" rows="4" columns="60"></textarea>
                <span asp-validation-for="AcquiredItem.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AcquiredItem.Barcode" class="control-label"></label>
                <input asp-for="AcquiredItem.Barcode" class="form-control" />
                <span asp-validation-for="AcquiredItem.Barcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AcquiredItem.Attachment" class="control-label"></label>
                <input type=file name="FileAttachment" class="form-control" />
                <span asp-validation-for="AcquiredItem.Attachment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-route-id="@ViewBag.AssessmentID" asp-page="../Assessments/Details">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
