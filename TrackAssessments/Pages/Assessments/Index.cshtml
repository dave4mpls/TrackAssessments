@page
@model TrackAssessments.Pages.Assessments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Assessments</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Assessment[0].AssessmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assessment[0].AssessmentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assessment[0].Destination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assessment[0].Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assessment[0].Creator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assessment[0].CreateDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Assessment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AssessmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssessmentType.AssessmentTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destination.DestinationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.ID">Details/Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
