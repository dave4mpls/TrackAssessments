@page
@model TrackAssessments.Pages.AssessmentTypes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Assessment Type</h4>
    <hr />
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.AssessmentType.ID">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AssessmentType.AssessmentTypeName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AssessmentType.AssessmentTypeName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AssessmentType.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AssessmentType.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AssessmentType.Creator)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AssessmentType.Creator)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AssessmentType.CreateDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AssessmentType.CreateDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AssessmentType.RequiredItems)
        </dt>
        <dd>
            <p>
                <a asp-route-AssessmentTypeID="@Model.AssessmentType.ID" asp-page="../RequiredItems/Create">Create New</a>
            </p>
            <table class="table">
                <thead>
                    <tr >
                        @foreach (var item in Model.AssessmentType.RequiredItems)
                        {
                            <th>
                                @Html.DisplayNameFor(model => item.ItemName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => item.ItemType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => item.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => item.Attachment)
                            </th>
                            break;
                        }
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.AssessmentType.RequiredItems)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ItemName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ItemType.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <a target=_new asp-page="../RequiredItems/Download" asp-route-id="@item.ID">
                                @Html.DisplayFor(modelItem => item.AttachmentFileName)
                            </a>
                        </td>
                        <td>
                            <a asp-page="../RequiredItems/Edit" asp-route-AssessmentTypeID="@Model.AssessmentType.ID" asp-route-id="@item.ID">Edit</a> |
                            <a asp-page="../RequiredItems/Delete" asp-route-AssessmentTypeID="@Model.AssessmentType.ID" asp-route-id="@item.ID">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
